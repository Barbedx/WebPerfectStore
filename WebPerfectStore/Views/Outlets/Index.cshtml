@model IEnumerable<WebPerfectStore.Models.Outlet>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Точки</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.fName)
                    <div class="visible-xs">@Html.DisplayNameFor(model => model.fAddress)</div>
                    <div class="visible-xs">@Html.DisplayNameFor(model => model.Traffic)</div>
                </th>

                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.fAddress)
                </th>

                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Traffic)
                </th>


                <th class="text-right">
                    @Html.DisplayNameFor(model => model.POP)

                    <div class="visible-xs">@Html.DisplayNameFor(model => model.Tier)</div>
                    <div class="visible-xs">@Html.DisplayNameFor(model => model.fcomment)</div>
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Tier)
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.fcomment)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr data-toggle="collapse" data-target="#@item.fID" class="panel-collapse">

                    @*LEFT COLUMN*@

                    <td>
                        @Html.DisplayFor(modelItem => item.fName)
                        <div class="visible-xs mobileSmall">@Html.DisplayFor(model => item.fAddress)</div>
                        <div class="visible-xs mobileSmall">@Html.DisplayFor(model => item.Traffic)</div>
                    </td>

                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.fAddress)
                    </td>
                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.Traffic)
                    </td>

                    @*Right COLUMN*@


                    <td class="text-right" >
                        @Html.DisplayFor(modelItem => item.POP)
                        <div class="visible-xs mobileSmall"><small>@Html.DisplayFor(model => item.Tier)</small></div>
                        <div class="visible-xs mobileSmall"><em>@Html.DisplayFor(model => item.fcomment)</em></div>
                    </td>
                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.Tier)
                    </td>
                    <td class="hidden-xs">
                        @Html.DisplayFor(modelItem => item.fcomment)
                    </td>

                </tr>
                <tr>
                    <td colspan="12" class="panel-body collapse" id="@item.fID">
                        <div class="panel-body">

                            <div class="col-md-6 col-lg-6 col-xs-6" >
                                @*<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#mymodal" >OPEN </button>*@
                                 @*@Html.ActionLink("Создать", "Edit", new { id = item.fID }, 
                                new Dictionary<string, object> { { "class", "btn btn-info btn-lg" }, { "data-toggle", "modal" }, { "data-target", "#mymodal" } }) |*@
                                @Html.ActionLink("Создать", "SelectDocument", new { id = item.fID }, new { @class = "btn btn-default" })
                            </div>
                            <div class="col-md-6 col-lg-6 col-xs-6">
                                  @Html.ActionLink("Детально", "Details", new { id = item.fID },new { @class = "btn btn-default" })
                            </div>
                         </div>

                    </td>
                    @*<td colspan="42">
                    </td>*@
                </tr>
            }
        </tbody>

    </table> 
</div>
